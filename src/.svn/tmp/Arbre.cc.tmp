int NoeudInstSi::getValeur(){
	int val=0;
	int test=0;
	unsigned int i=0;

	if(cond->getValeur()== 1){
		val=seq->getValeur();
	}
	else{
		while(test==0 && i<tabS.size()){
			if( ((tabS[i]->cond)->getValeur())==1){
				val=(tabS[i]->seq)->getValeur();
				test = 1;
			}
			i++;
